# {{ ansible_managed }}
# HTTPS reverse proxy for {{ item.server_name }} ({{ item.description | default('') }})

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name {{ item.server_name }};

    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ item.server_name }};

    # SSL certificates (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/{{ item.server_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.server_name }}/privkey.pem;
    include /etc/nginx/snippets/ssl-params.conf;

    # Security headers
{% for header, value in nginx_security_headers.items() %}
    add_header {{ header }} "{{ value }}" always;
{% endfor %}

    # Rate limiting
    limit_req zone=general burst={{ nginx_rate_limit_burst }} nodelay;
    limit_conn addr {{ nginx_limit_conn }};

    # Block bad bots
    if ($bad_bot) {
        return 403;
    }

    # Logging
    access_log /var/log/nginx/{{ item.server_name }}_access.log main;
    error_log /var/log/nginx/{{ item.server_name }}_error.log warn;

{% if item.auth_basic is defined and item.auth_basic %}
    # Basic authentication
    auth_basic "{{ item.auth_basic_realm | default('Restricted') }}";
    auth_basic_user_file {{ item.auth_basic_file | default('/etc/nginx/.htpasswd') }};
{% endif %}

    # Reverse proxy
    location / {
        proxy_pass {{ item.proxy_pass }};
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

{% if item.proxy_ssl is defined and item.proxy_ssl %}
        # Backend uses HTTPS
        proxy_ssl_verify {{ 'on' if (item.ssl_verify | default(true)) else 'off' }};
{% endif %}

        proxy_buffering off;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 300s;

        # WebSocket support
        proxy_cache_bypass $http_upgrade;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
